{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
		  "skipLibCheck": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": ["dom", "es2016"],
        "types": ["mocha", "node"],
        "jsx": "react",
        "declaration": true
    },
	 "include": [
     "src/external-types.d.ts",
		 "src/Index.tsx"
	 ],
	 "exclude": [
		 "node_modules"
	 ]
}
